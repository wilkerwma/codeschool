{% extends "base.jinja2" %}
{% block title %}
    Battle winners
{% endblock %}
{% block content %} 
<h1>Resultado da Batalha</h1>
    <table id="battles">
        <thead><tr><th>ID</th><th>Date Begin</th><th>Date Finish</th><th>Result Battle</th></tr></thead>
        <tbody>
            {% for battle in battles %}
            <tr onclick="location.href='/battles/{{battle.battle_id}}';">
                <td> {{ battle.id }} </td>
                <td> {{ battle.time_begin|dateformat(format="short") }} </td>
                <td> {{ battle.time_end|dateformat(format="short") }} </td>
                <td>  {{ battle.battle }} </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% block extra_js %}
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript">
            $("#battles").DataTable();
        </script>
    {% endblock %}
    {% block extra_css %}
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
        <style>
            #battles tr:hover{
                cursor: pointer;
                background: white;
                color: black;
            }
        </style>
    {% endblock %}
{% endblock %}
